<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <img src="../public/image/burgers.jpg" alt="BURGERS!!">
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="centered">EAT! DA! BURGER!</h1>
    </div>
    <div class="col-4">
      <h2 class="centered">Can't wait to eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4">
      <h2>Yummy in my Tummy</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <form class="create-form">
    <h2>Add a Burger</h2>
    <div class="form-group">
      <label for="burgerName">Burger Name:</label>
      <input type="text" id="burgerName" data-devoured="0" name="name">
    </div>

    <button class="myButton" type="submit">Add Burger</button>
  </form>

</div>